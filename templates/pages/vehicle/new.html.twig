{% extends 'base.html.twig' %}

{% block title %}Creation
{% endblock %}

{% block body %}
	<div class="container">
	<h1>Création d'un nouveau véhicule</h1>
		{{ form_start(form) }}
		<div class="form-errors">
			{{ form_errors(form) }}
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.name) }}
			</div>
			<div class="col" id="some-custom-id">
				{{ form_row(form.price) }}
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}

